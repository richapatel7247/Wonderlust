<% layout("/layouts/boilerplate") %>

    
    <div class="row mt-3">
    <div class="col-8 offset-2">
       
     <h3>Create New Listing</h3>
    <form method="POST" action="/listings" enctype="multipart/form-data">
        

        <div class="mb-3" >
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" placeholder="enter title" class="form-control" required>
            
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="description" placeholder="enter description" class="form-control" required></textarea>
        </div>
    
        <div class="mb-3">
            <label for="image" class="form-label"> Upload Image </label>
            <input type="file" name="image"  class="form-control" required></input>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="price" placeholder="enter price" class="form-control" required></input>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" placeholder="enter country" class="form-control" required></input>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" placeholder="enter location" class="form-control" required></input>
        </div>

        <button class="btn add-btn mt-3 mb-3">Add</button>
   
    </form>
</div>
</div>





