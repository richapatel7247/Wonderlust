<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Wonderlust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/login">
            <label for="username" class="form-label">Username</label>
            <input type="text"
             name="username" 
             id="username"
             class="form-control"
             required>

            <label for="password" class="form-label">Password</label>
            <input type="password"
             name="password" 
             id="password"
             class="form-control"
             required>

             <div class="mt-3">
                <button class="btn btn-success">Login</button>
             </div>

             
        </form>
    </div>
</div>