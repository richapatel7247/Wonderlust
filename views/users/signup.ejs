<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3 ">
    <h1 class="col-6 offset-3">Signup on Wonderlust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup">
            <label for="username" class="form-label">Username</label>
            <input type="text"
             name="username" 
             id="username"
             class="form-control"
             required>

            <label for="email" class="form-label">Email</label>
            <input type="email"
             name="email" 
             id="email"
             class="form-control"
             required>

             <label for="password" class="form-label">Password</label>
            <input type="password"
             name="password" 
             id="password"
             class="form-control"
             required>

             <div class="mt-3">
                <button class="btn mb-3" style="background-color: #253237; color: white;">Signup</button>
             </div>

             
        </form>
    </div>
</div>